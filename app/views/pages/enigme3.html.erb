<div class="container home-container text-center">
  <div class="window">
    <div class="inner-window">
      <div class="page-content">

        <h1>Enigme 3</h1>
        <div class="audio">
          <%= audio_tag("song1.mp3", controls: true) %>
          <%= audio_tag("song2.mp3", controls: true) %>
          <%= audio_tag("song3.mp3", controls: true) %>
        </div>

        <h2>Qu’avez-vous utilisé pour faire tomber les personnages ?</h2>
        <%= form_tag enigme3_attempt_path, class: 'form-inline' do %>
          <%= text_field_tag :attempt_3, nil, class: 'form-control'%>
          <%= submit_tag "Valider", class: 'btn btn-primary' %>
        <% end %>
        <p class="flash_error">
          <% if flash[:error] %>
            <%= flash[:error] %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>


